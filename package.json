{
  "name": "@cartop/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "typecheck": "tsc -b -v || true",
    "env:pull": "node scripts/setup-env-vars.js",
    "knip": "knip --cache",
    "dev": "yarn workspaces foreach -pi run dev",
    "dev:backend": "yarn workspace @cartop/backend dev",
    "dev:frontend": "yarn workspace @cartop/client dev",
    "dev:admin": "yarn workspace @cartop/admin dev",
    "build": "yarn workspaces foreach -pt run build",
    "build:backend": "yarn workspace @cartop/backend build",
    "build:frontend": "yarn workspace @cartop/client build",
    "build:admin": "yarn workspace @cartop/admin build",
    "test": "yarn workspaces foreach -p run test",
    "lint": "yarn workspaces foreach -p run lint",
    "type-check": "yarn workspaces foreach -p run type-check",
    "clean": "yarn workspaces foreach -p run clean && rm -rf node_modules",
    "generate": "yarn generate:all",
    "generate:all": "yarn generate:rest && yarn generate:gql",
    "generate:rest": "orval --config orval.config.ts",
    "generate:gql": "yarn workspace @cartop/client codegen && yarn workspace @cartop/admin codegen",
    "generate:gql:client": "yarn workspace @cartop/client codegen",
    "generate:gql:admin": "yarn workspace @cartop/admin codegen"
  },
  "resolutions": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.1",
    "next-i18next": "^15.2.0"
  },
  "dependencies": {
    "nuqs": "^2.7.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.20.1",
    "globals": "^15.8.0",
    "knip": "^5.63.0",
    "lint-staged": "^16.1.2",
    "orval": "^7.8.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.4",
    "typescript-eslint": "^8.9.0",
    "vercel": "^46.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=3.0.0"
  },
  "packageManager": "yarn@4.6.0"
}
